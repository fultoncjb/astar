#ifndef GTKMM_EXAMPLEWINDOW_H
#define GTKMM_EXAMPLEWINDOW_H

#include <gtkmm.h>
#include <astar.h>

// Child window of the main window
class MapDrawArea : public Gtk::DrawingArea
{
	public:
		MapDrawArea();
		virtual ~MapDrawArea();

		// TODO: move this to the MapWindow so we can only copy the variables once so the redraw isn't so slow
		//m_map guiMapData;
	protected:
		virtual bool on_draw(const Cairo::RefPtr<Cairo::Context>& cr);
};

// Main window
class ExampleWindow : public Gtk::Window
{
public:
  class MapWindow : public Gtk::Window
  {
	public:
		MapWindow();
		
		// Constructor for ExampleWindow input
		explicit MapWindow(const ExampleWindow &e);
		m_map guiMapData;
		virtual ~MapWindow();
	protected:
		MapDrawArea m_draw;
  };
  ExampleWindow();
  virtual ~ExampleWindow();

protected:
  //Signal handlers:
  void on_button_file_clicked();

  //Child widgets:
  Gtk::ButtonBox m_ButtonBox;
  Gtk::Button m_Button_File;
  Gtk::Button m_Button_Folder;

  std::string inputFilename;
  std::string outputFilename;
};

#endif //GTKMM_EXAMPLEWINDOW_H
